
<h1>Listing posts</h1>

<head>
  <title>Simple Search Form</title>
</head>
<body>
  <%= form_tag(posts_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:set_post], class: "span2", placeholder: "Search Posts" %>
      <button class="btn" type="submit">search<i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>
</body>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.body %></td>
        <td><%= post.published_at %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New Post', new_post_path %>
